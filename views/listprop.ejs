<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <!-- Bootstrap -->
    <link rel="stylesheet" href="public/css/bootstrap.css" />
    <!-- Lightbox -->
    <link rel="stylesheet" href="public/css/lightbox.min.css"  />
    <!-- Custom -->
    <link rel="stylesheet" href="public/css/styles.css" />

    <title>Far East Property</title>
  </head>

  <body>
    <!-- Topbar -->
    <%- include('partials/topbar.ejs')%>

    <!-- Navbar -->

    <%- include('partials/navbar.ejs')%>

    
      <% if (listingData.length !=0) {var i=1; listingData.forEach(
      function(data){ %>
      <section id="showcase-inner" class="py-5 text-white">
      <div class="container">
        <div class="row text-center">
          <div class="col-md-12">
            <h1 class="display-4"><%=data.address%></h1>
            <p class="lead"><i class="fas fa-map-marker"></i> <%=data.City%></p>
          </div>
        </div>
      </div>
    </section>
    <!-- Breadcrumb -->
    <section id="bc" class="mt-3">
      <div class="container">
        <nav>
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="/">Home</a>
            </li>
            <li class="breadcrumb-item">
              <a href="/listings">Listings</a>
            </li>
            <li class="breadcrumb-item active"><%=data.address%></li>
          </ol>
        </nav>
      </div>
    </section>
    <section id="listing" class="py-4">
      <div class="container">
        <a href="/listings" class="btn btn-light mb-4">Back To Listings</a>
        <div class="row">
          <div class="col-md-9">
      <!-- Home Main Image -->
      <img
      src="<%=data.pathname%>"
      alt=""
      class="img-main img-fluid mb-3"
    />
 <!-- Thumbnails -->
 <div class="row mb-5 thumbs">
  <div class="col-md-2">
    <a
      href="<%=data.side1%>"
       data-lightbox="home-images"
      >
    
      <img
        src="<%=data.side1%>"
        alt=""
        class="img-fluid"
      />
    </a>
  </div>
  <div class="col-md-2">
    <a
      href="<%=data.side2%>"
      data-lightbox="home-images"
    >
      <img
        src="<%=data.side2%>"
        alt=""
        class="img-fluid"
      />
    </a>
  </div>
  <div class="col-md-2">
    <a
      href="<%=data.side3%>"
      data-lightbox="home-images"
    >
      <img
        src="<%=data.side3%>"
        alt=""
        class="img-fluid"
      />
    </a>
  </div>
  <div class="col-md-2">
    <a
      href="<%=data.side4%>"
      data-lightbox="home-images"
    >
      <img
        src="<%=data.side4%>"
        alt=""
        class="img-fluid"
      />
    </a>
  </div>
  <div class="col-md-2">
    <a
      href="<%=data.side5%>"
      data-lightbox="home-images"
    >
      <img
        src="<%=data.side5%>"
        alt=""
        class="img-fluid"
      />
    </a>
  </div>
  
</div>
    <!-- Fields -->
    <div class="row mb-5 fields">
      <div class="col-md-6">
        <ul class="list-group list-group-flush">
          <li class="list-group-item text-secondary">
            <i class="fas fa-money-bill-alt"></i> Asking Price:
            <span class="float-right">$<%=data.price%></span>
          </li>
          <li class="list-group-item text-secondary">
            <i class="fas fa-bed"></i> Bedrooms:
            <span class="float-right"><%=data.bedroom%></span>
          </li>
          <li class="list-group-item text-secondary">
            <i class="fas fa-bath"></i> Bathrooms:
            <span class="float-right"><%=data.bathroom%></span>
          </li>
          <li class="list-group-item text-secondary">
            <i class="fas fa-car"></i> Garage:
            <span class="float-right"><%=data.garage%></span>
          </li>
        </ul>
      </div>
      <div class="col-md-6">
        <ul class="list-group list-group-flush">
          <li class="list-group-item text-secondary">
            <i class="fas fa-th-large"></i> Square Feet:
            <span class="float-right"><%=data.square_feet%></span>
          </li>
          <li class="list-group-item text-secondary">
            <i class="fas fa-square"></i> Lot Size:
            <span class="float-right"><%=data.lot%> </span>
          </li>
          <li class="list-group-item text-secondary">
            <i class="fas fa-calendar"></i> Listing Date:
            <span class="float-right"><%=data.listing_date.toLocaleString('en-US',{year:'numeric',month:'long',day:'numeric'})%></span>
          </li>
          <li class="list-group-item text-secondary">
            <i class="fas fa-bed"></i> Realtor:
            <span class="float-right"><%=data.realtor%> </span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Description -->
    <div class="row mb-5">
      <div class="col-md-12">
        <%=data.description%>
      </div>
    </div>
  </div>
  
  <div class="col-md-3">
    <div class="card mb-3">
      <img
        class="card-img-top"
        src="public/images/realtors/kyle.jpg"
        alt="Seller of the month"
      />
      <div class="card-body">
        <h5 class="card-title">Property Realtor</h5>
        <h6 class="text-secondary"><%=data.realtor%></h6>
      </div>
    </div>
    <button
      class="btn-primary btn-block btn-lg"
      data-toggle="modal"
      data-target="#inquiryModal"
    >
      Make An Inquiry
    </button>
  </div>
</div>
</div>
</section>

<!-- Inquiry Modal -->
<div class="modal fade" id="inquiryModal" role="dialog">
<div class="modal-dialog">
<div class="modal-content">
  <div class="modal-header">
    <h5 class="modal-title" id="inquiryModalLabel">Make An Inquiry</h5>
    <button type="button" class="close" data-dismiss="modal">
      <span>&times;</span>
    </button>
  </div>
  <div class="modal-body">
    <form>
      <div class="form-group">
        <label for="property_name" class="col-form-label"
          >Property:</label
        >
        <input
          type="text"
          name="listing"
          class="form-control"
          value="<%=data.address%>"
          disabled
        />
      </div>
      
      <div class="form-group">
        <label for="name" class="col-form-label">Name:</label>
        <input type="text" name="name" class="form-control" required />
      </div>
      <div class="form-group">
        <label for="email" class="col-form-label">Email:</label>
        <input
          type="email"
          name="email"
          class="form-control"
          required
        />
      </div>
      <div class="form-group">
        <label for="phone" class="col-form-label">Phone:</label>
        <input type="text" name="phone" class="form-control" />
      </div>
      <div class="form-group">
        <label for="message" class="col-form-label">Message:</label>
        <textarea name="message" class="form-control"></textarea>
      </div>
      <hr />
      <input
        type="submit"
        value="Send"
        class="btn btn-block btn-secondary"
      />
    </form>
  </div>
</div>
</div>
</div>
<% i++;})%> <%}%>
    <!-- Topbar -->
    <%- include('partials/footer.ejs')%>

    <script src="public/js/jquery-3.3.1.min.js "></script>
    <script src="public/js/bootstrap.bundle.min.js "></script>
    <script src="public/js/lightbox.min.js"></script>
    <script src="public/js/main.js "></script>
  </body>
</html>
